{
    "extends": "../../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "nae-app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "nae-app",
            "kebab-case"
        ],
        "variable-name": [
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "no-string-literal": false,
        "import-blacklist": [
            true,
            "netgrif-components-core",
            [".*/netgrif-components-core/.*"],
            "netgrif-components",
            [".*/netgrif-components/.*"]
        ]
    }
}
