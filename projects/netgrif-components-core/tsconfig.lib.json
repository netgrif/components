{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2015",
        "declarationMap": true,
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts",
        "schematics/**"
    ],
    "typedocOptions": {
        "exclude": "**/*.spec.ts",
        "out": "../../docs/typedoc/components-core",
        "theme": "default"
    }
}
