{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/spec",
        "types": [
            "jasmine",
            "node"
        ],
        "target": "ES2022",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "files": [
        "src/test.ts"
    ],
    "exclude": [
        "src/commons/*"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}
